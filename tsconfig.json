{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src", "custom.d.ts"]
}
